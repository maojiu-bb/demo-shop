.goodDetail swiper {
  width: 750rpx;
  height: 500rpx;
}
.goodDetail swiper image {
  width: 100%;
  height: 100%;
}
.goodDetail .info {
  padding: 20rpx;
  padding-top: 30rpx;
}
.goodDetail .info .price {
  color: #b50e03;
  font-size: 40rpx;
}
.goodDetail .info .price text:nth-child(2) {
  margin-left: 10rpx;
  color: #bbb;
  font-size: 30rpx;
  text-decoration: line-through;
}
.goodDetail .info .title {
  margin: 20rpx 0;
}
.goodDetail .info .attr {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  padding: 20rpx 0;
  font-size: 25rpx;
}
.goodDetail .detail {
  padding: 20rpx;
  padding-bottom: 50px;
}
.goodDetail .detail .header {
  font-size: 35rpx;
}
.goodDetail .detail .content {
  margin-top: 15rpx;
  line-height: 1.8;
  font-size: 30rpx;
}
.goodDetail .detail .content .gomeImgLoad {
  width: 750rpx !important;
}
.goodDetail .goods-nav {
  position: fixed;
  bottom: 0;
  width: 750rpx;
}